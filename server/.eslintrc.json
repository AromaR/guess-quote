{
  "env": {
    "es6": true,
    "node": true,
    "jest/globals": true
  },
  "parserOptions": { "ecmaVersion": 2018 },
  "extends": ["eslint:recommended", "plugin:jest/recommended", "prettier"],
  "plugins": ["jest"],
  "rules": {
    "eqeqeq": "error",
    "no-invalid-this": "error",
    "no-var": "error",
    "radix": "error"
  }
}
